<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @items.count %> Items</h1>
    </div>
  </div>

  <%= form_tag search_index_path, :method => 'get'  do %>
    <p>
      <%= text_field_tag :search, params[:search], id: "search_box"%>
      <%= submit_tag "Search", :name => nil %>
    </p>
  <% end %>

  <div class="row"></div>
  <% @items.each do |item| %>
    <div class="col-sm-3">
      <h5><%= item.name %></h5>
      <%= link_to(image_tag(item.image_url), item_path(item)) %>
      <p>
        <%= item.description %>
      </p>
    </div>
  <% end %>
</div>
